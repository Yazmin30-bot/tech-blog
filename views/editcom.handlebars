{{#if isLogged_in }}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Comment:</h3>
    <form class="form new-post-form post-list">
      <div class="form-group">
        {{!-- <label for="post-cont">content:</label> --}}
        <textarea class="form-input" id="post-cont" name="post-cont" >{{text}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{id}}" data-id-p="{{post_id}}">Update</button>
      </div>
    </form>
    <div  class="delete-post">
      <button class="btn btn-sm btn-danger" data-id="{{id}}" data-id-p="{{post_id}}">DELETE</button>
    </div>
  </div>

</div> 


<script src="/js/editcom.js"></script>

{{else}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>You can't not update or delete the comment</h3>
  </div>
<script src="/js/editcom.js"></script>  
</div>

{{/if}}





