<!-- Loop over each object in the projects array style="height: 10rem;"-->



 {{#each posts as |post| }}
<div class="card">
  <div class="card-body align-middle">
    <h2 class="card-title"><a href="/post/{{post.id}}">{{post.title}}  </a></h2>
    <h6 class="card-subtitle mb-2 text-muted"><cite title="Source Title">{{post.user.username}} on </cite></h6>
    <h4 class="card-text ">{{post.content}}</h4>
    {{!-- <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a> --}}
  </div>
</div>
{{/each}}
  

