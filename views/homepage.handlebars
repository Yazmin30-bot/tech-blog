<!-- Loop over each object in the projects array -->

 {{#each posts as |post| }}
<div class="card">
  <div class="card-header">
     <a href="/post/{{post.id}}">{{post.title}}  </a>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <h3>{{post.content}}</h3>
      <footer class="blockquote-footer">Posted by  <cite title="Source Title">{{post.user.username}} on </cite></footer>
    </blockquote>
  </div>
</div>
{{/each}}

  

